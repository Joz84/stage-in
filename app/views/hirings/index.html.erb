<div class="container padding-box">
  <div class="row">
    <h2>Stages disponibles :</h2>
    <p>Cliquez sur un marqueur pour accéder à la fiche du stage.</p>
  </div>
</div>
<div id="map" style="width: 100%; height: 600px;"></div>

<div class="container padding-box">
  <h2>Liste :</h2>
  <p>Cliquez sur une vignette pour accéder à la fiche du stage.</p>
  <div class="row">
    <% @hirings.each do |hiring| %>
      <div class="col-xs-12 col-sm-4">

        <div class="card" style="background-color: white; margin-bottom: 15px; color: #252A34">
          <div class="card-category"><%= hiring.company.address.gsub(/\d/, '') if hiring.company.address %></div>
          <div class="card-description">
            <h2><%= hiring.company.company if hiring.company %></h2>
            <p>pour le <%= hiring.internship.name %></p>

          </div>
          <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
          <%= link_to "", hiring, class: "card-link" %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
  </script>
<% end %>
