<div class="skill-wrapper">
  <h3 id="skill-title"> Es-tu plutôt...</h3>
  <%= link_to skill_student_skills_path(@skill, weight: 1), method: :post do %>
    <div class="skill-column flexbox" style="background-image: url('http://res.cloudinary.com/doodlid/image/upload/v1506109710/stagein_home1_lilt15.jpg');">
      <h5 class="skill-name">Caractère 1<%= @skill.name.split(/(?<!^)(?=[A-Z])/)[0] %></h5>
    </div>
  <% end %>
  <%= link_to skill_student_skills_path(@skill, weight: -1), method: :post do %>
    <div class="skill-column flexbox" style="background-image: url('http://res.cloudinary.com/doodlid/image/upload/v1506109710/stagein_home1_lilt15.jpg');">
      <h5 class="skill-name">Caractère 2<%= @skill.name.split(/(?<!^)(?=[A-Z])/)[0] %></h5>
    </div>
  <% end %>
</div>

