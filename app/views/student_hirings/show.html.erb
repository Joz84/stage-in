<% content_for(:title) do%>
  STAGE-IN - Mes Offres avec <%= @hiring.company.company %>
<% end %>

<div class="full-height under-navbar flex-vertical-center padding-box">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-lg-offset-2">
      <%= render "shared/hiring" %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
      <div id="checks-list">
        <h5>Valide les d√©marches que tu as fait en cliquant:</h5>
        <% @hiring_checkpoints.each do |hiring_checkpoint| %>
          <%= render "link_checking", hc: hiring_checkpoint %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $('#btn-postuler').hide();
  <% end %>
<% end %>


