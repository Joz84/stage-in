<div class="navbar-wagon" id="navbar">

  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "stagein_logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if current_user.role == "student" %>
        <%= link_to "Chercher un stage", skill_path(Skill.first), class: "navbar-wagon-item navbar-wagon-link hidden-xs" %>
      <% end %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div class="burger dropdown-toggle" data-toggle='dropdown' id="navbar-wagon-menu">
            <i class="fas fa-bars svg"></i>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: " Mon Compte") %>
              <% end %>
            </li>
            <li>
              <%= link_to (current_user.role == "student" ? hirings_path : company_hirings_path) do %>
                <i class="fa fa-book"></i> <%= t(".profile", default: " Mes offres de stages") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Se dÃ©connecter") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Links when logged out -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div class="burger dropdown-toggle" data-toggle='dropdown' id="navbar-wagon-menu">
            <i class="fas fa-bars"></i>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "Le stage en entreprise", current_page?(root_path) ? "#page2" : root_path, class: "navbar-wagon-item navbar-wagon-link scroll" %>
            </li>
            <li>
              <%= link_to "Se connecter", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
          </ul>
        </div>
      </div>

    <% end %>

  </div>

</div>

