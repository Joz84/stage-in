<div class="container-fluid" id="step0">
  <div class="row full-height under-navbar flex-vertical-center">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <h2><%= t('inscription.company0.title') %></h2>
      <p class="relative"><i class="fa fa-star fontawesome"></i><%= t('inscription.company0.text') %></p>
      <p><i class="fa fa-circle dot"></i><%= t('inscription.company0.point0') %></p>
      <p><i class="fa fa-circle dot"></i><%= t('inscription.company0.point1') %></p>
      <p><i class="fa fa-circle dot"></i><%= t('inscription.company0.point2') %></p>
      <p><i class="fa fa-circle dot"></i><%= t('inscription.company0.point3') %></p>
      <p> <%= link_to ".. la suite sur Service-public.fr", "https://www.service-public.fr/particuliers/vosdroits/F1882"%></p>
      <div class="full-width">
        <%= link_to "#navbar", class: "scroll", id: "go-student" do %>
          <div class="btn margin-top-big btn-blue margin-bottom-small"><%= t('inscription.company0.button1') %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="fullscreen under-navbar login flexbox" id="step1">
    <div class="container signup-box">
      <div class="row login-top flexbox">
        <h3 class="text-center "><%= t('inscription.company1.title') %></h3>
      </div>
      <div class="row padding-box">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs ">
            <p>Nom de l'entreprise</p>
            <%= f.input :company, required: :true, label: false %>
            <p>Prénom du référent</p>
            <%= f.input :first_name, label: false %>
            <p>Nom du référent</p>
            <%= f.input :last_name, required: true, label: false %>
            <p>Téléphone*</p>
            <%= f.input :phone, required: true, label: false %>
            <p>Email*</p>
            <%= f.input :email, required: true, label: false %>
            <p>Mot de passe</p>
            <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum"if @minimum_password_length) %>
            <p>Retaper le mot de passe</p>
            <%= f.input :password_confirmation, required: true, label: false %>
            <%= f.input :role, input_html: { value: :company }, required: true, as: :hidden %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "S'enregistrer", class: "btn  btn-blue" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var step0_button = document.getElementById('step0');
      step0_button.addEventListener('click', function(event){
        this.style.display = "none";
      });
    });
  </script>
<% end %>
