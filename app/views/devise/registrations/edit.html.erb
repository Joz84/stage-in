<div class="container-fluid">
    <div class="row fullscreen flex-vertical-center">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <h2>Mon Compte</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :address, required: true %>
          <%= f.input :zipcode, required: true %>
          <%= f.input :city, required: true %>
          <%= f.input :phone %>

          <%= f.input :password, autocomplete: "off", hint: "Laisser ce champ vide si vous ne souhaitez pas le modifier", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "Veuillez saisir votre mot de passe actuel pour confirmer ces modifications", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Modifier", class: "btn btn-blue" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
