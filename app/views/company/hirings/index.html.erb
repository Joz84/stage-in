<div class="padding-content margin-big-top">

  <h5>Ajouter des places de stage dans votre entreprise:</h5>

  <%= simple_form_for :hiring, url: company_hirings_path, method: :post do |f| %>
    <div class="inline-form-wrapper flex-left">
      <%= f.input :internship_id, label: "Type de stage", collection: Internship.all, class: "input-medium" %>
      <%= f.input :job_id, label: "Type de métier", collection: Job.all, class: "input-medium" %>
      <%= f.input :number, label: "Nombre de place", collection: 1..40, class: "input-medium" %>
      <%= f.button :submit, "Rechercher", class: "btn-inline btn-medium btn-blue fix-btn-simpleform" %>
    </div>
  <% end %>

  <h5>Places disponibles:</h5>

  <% @hirings.each do |hiring| %>
    <div class="user">
      <div class="line">
        <div class="user-name">
          <h6>Nom de l'élève:</h6>
          <h4>Josie Dalembert<%= hiring.internship.name %></h4>
        </div>
        <div class="user-status">
          <h6>
          <% if hiring.accepted? %>
            <% hiring.accepted_student_hirings.each do |request| %>
              <div class="col-xs-6">
                <%= request.student.full_name %>
              </div>
              <div class="col-xs-6">
                Accepter
              </div>
            <% end %>
          <% elsif hiring.required? %>
            <% hiring.required_student_hirings.each do |request| %>
              <div class="col-xs-6">
                <%= request.student.full_name %>
              </div>
              <div class="col-xs-6">
                <%= link_to "accepter", company_student_hiring_path(hiring, state: 2), method: :put %>
                <%= link_to "refuser", company_student_hiring_path(hiring, state: 3), method: :put %>
              </div>
            <% end %>
          <% else %>
            Stage non demandé :,(
          <% end %>
          </h6>
        </div>
      </div>
      <div class="line">
        <div>
          <p class="user-data address"></p>
        </div>
        <div class="min-width text-right">
          <span class="status declined"></span>
          <i class="fa fa-pencil"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>
